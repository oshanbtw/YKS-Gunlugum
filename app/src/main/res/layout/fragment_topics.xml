<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/gradient_welcome">

    <LinearLayout
        android:id="@+id/layout_topics"
        android:layout_width="0dp"
        android:layout_height="560dp"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        android:background="@drawable/gradient_welcome_white"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            tools:src="@tools:sample/avatars"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"/>
        
        <LinearLayout
            android:id="@+id/ly_topics_tyt"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:layout_marginTop="60dp"
            android:background="@drawable/gradient_topics_text">

            <ImageView
                android:id="@+id/iv_topics_tyt"
                android:layout_width="50dp"
                android:layout_height="50dp"
                tools:src="@tools:sample/avatars"
                android:layout_gravity="center"
                android:layout_marginStart="25dp"/>

            <TextView
                android:id="@+id/tv_topics_tyt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TYT KONULARI"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:textSize="25dp"
                android:layout_marginStart="10dp" />
            
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_topics_ayt"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/gradient_topics_text">

            <ImageView
                android:id="@+id/iv_topics_ayt"
                android:layout_width="50dp"
                android:layout_height="50dp"
                tools:src="@tools:sample/avatars"
                android:layout_gravity="center"
                android:layout_marginStart="25dp"/>

            <TextView
                android:id="@+id/tv_topics_ayt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AYT KONULARI"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:textSize="25dp"
                android:layout_marginStart="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_topics_ydt"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/gradient_topics_text">

            <ImageView
                android:id="@+id/iv_topics_ydt"
                android:layout_width="50dp"
                android:layout_height="50dp"
                tools:src="@tools:sample/avatars"
                android:layout_gravity="center"
                android:layout_marginStart="25dp"/>

            <TextView
                android:id="@+id/tv_topics_ydt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="YDT KONULARI"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:textSize="25dp"
                android:layout_marginStart="10dp"/>

        </LinearLayout>
        
    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>